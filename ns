#!/bin/bash
files="/etc/s-hell"
rm -rf ns
source $files/cfg
wget -q $DOWNLOAD_URL/ver -O v;sh v
wget -q $DOWNLOAD_URL/hlss -O /usr/bin/hls;chmod 777 /usr/bin/hls
clear
echo -e "\033[36m————————————————————————————————————————————————————
	╦ ╦╦  ╔═╗╦ ╦╔══ ╦  ╦   ╔═╗╔═╗╔╦╗
	╠═╣║  ╚═╗╠═╣╠══ ║  ║   ║  ║ ║║║║
	╩ ╩╩═╝╚═╝╩ ╩╚══ ╩═╝╩═╝.╚═╝╚═╝╩ ╩
		Copyright © 2015-2017
        查看快捷指令与脚本版本
————————————————————————————————————————————————————
感谢您的更新查看版本请输入 hls -v查看
脚本更新完毕会没有任何报错
如有报错再执行一次 hls -u
————————————————————————————————————————————————————\033[0m"
