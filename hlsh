links="http://dl.hlshell.com"
files="/etc/s-hell"
file2="/etc/s-hell/log"
file3="/etc/hl-tmp"
rm -rf hls* h* g*
echo -e "nameserver 114.114.114.114\nnameserver 8.8.8.8" >> /etc/resolv.conf
ZEND_ARCH="i386"
LIB="lib"
if test `arch` = "x86_64"; then
        LIB="lib64"
        ZEND_ARCH="x86_64"
fi
if [ "$ZEND_ARCH" = "x86_64" ];
		then
		{
		clear
		echo -e "————————————————————————————————————————————————————
